{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "shared/*": [
        "../shared/src/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "interfaces/*": [
        "./src/interfaces/*"
      ],
      "database/*": [
        "./src/db/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
